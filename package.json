{
  "name": "zombienet-extension",
  "displayName": "ZombieNet",
  "description": "Extension for supporting Zombienet(zndsl) files",
  "version": "0.0.3",
  "publisher": "Paritytech",
  "icon": "resources/zombienet_256px.png",
  "authors": [
    {"name": "Wilfried Kopp aka Chevdor"},
    {"name": "Javier Viola"},
    {"name": "Nikolaos Kontakis"}
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paritytech/zombienet-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": "/*.zndsl",
        "url": "./zombienet-schema.json"
      }
    ],
    "snippets": [
      {
        "language": "zndsl",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "languages": [{
      "id": "zndsl",
      "aliases": ["ZombieNet", "ZNDSL", "zndsl"],
      "extensions": [".zndsl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "zndsl",
      "scopeName": "source.zndsl",
      "path": "./syntaxes/zndsl.tmLanguage.json"
    }]
  }
}
